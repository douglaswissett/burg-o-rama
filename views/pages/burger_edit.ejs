<!DOCTYPE html>
<html lang="en">
  <head>

    <%- include ../partials/head %>

  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse navbar-fixed-top">

        <%- include ../partials/nav %>

      </nav>
    </header>
    <main>
      
    
    <div class="container">

      <div class="starter-template">
        <h1><%= burgerForm.title %></h1>
        <p class="lead">Use this form to build a burger.</p>
        <form class="form-horizontal" action="<%= burgerForm.burgerURL %>" method="<%= burgerForm.submitMethod %>">
        <fieldset>


        <!-- Text input-->

        <div class="form-group">
          <label class="col-md-4 control-label" for="meat">Meat</label>
          <div class="col-md-6">
            <select id="meat" name="meatid" class="form-control">
              <option value="1">Bison</option>
              <option value="2">Ground Brisket</option>
              <option value="3">Angus</option>
              <option value="4">Elk</option>
              <option value="6">Pork Belly</option>
              <option value="7">Pulled Pork</option>
            </select>
          </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="bread">Bread</label>
          <div class="col-md-6">
            <select id="bread" name="breadid" class="form-control">
              <option value="1">Brioche</option>
              <option value="2">Whole Wheat</option>
              <option value="3">White Sesame</option>
              <option value="5">White</option>
              <option value="6">Focacchia</option>
            </select>
          </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="temperature">Meat Temperature</label>
          <div class="col-md-6">
            <select id="temperature" name="temperature" class="form-control">
              <option value="Rare">Rare</option>
              <option value="Medium_Rare">Medium_Rare</option>
              <option value="Medium">Medium</option>
              <option value="Medium_Well">Medium_Well</option>
              <option value="Well_Done">Well_Done</option>
            </select>
          </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="cheese">Cheese</label>
          <div class="col-md-6">
            <select id="cheese" name="cheeseid" class="form-control">
              <option value="">None</option>
              <option value="1">Muenster</option>
              <option value="2">Swiss</option>
              <option value="3">Blue</option>
              <option value="4">American</option>
              <option value="5">Cheddar</option>
              <option value="6">Queso Blanco</option>
              <option value="7">Emmentaler</option>
            </select>
          </div>
        </div>

        <!-- Multiple Checkboxes -->
        <!-- Select Basic -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="topping">Toppings</label>
          <div class="col-md-6">
            <select id="topping" name="toppingid" class="form-control">
              <option value="">None</option>
              <option value="1">Tomatoes</option>
              <option value="2">Caramelized Onions</option>
              <option value="3">Dijon Mustard</option>
              <option value="4">Lettuce</option>
            </select>
          </div>
        </div>


        <!-- orderid -->
        <input type="hidden" name="orderid" value="<%= orderID %>">


        <!-- Button -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="submit">Submit</label>
          <div class="col-md-4">
            <button id="submit" type="submit" class="btn btn-lg btn-success">Burger Me!</button>
          </div>
        </div>

        </fieldset>
        </form>

      </div>

    </div><!-- /.container -->



    </main>

    
    <%- include ../partials/footer %>

</body></html>